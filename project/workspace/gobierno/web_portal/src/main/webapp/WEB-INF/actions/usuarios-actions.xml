<?xml version="1.0" encoding="UTF-8"?>
<actions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="../schema/actions.xsd">
    <form-beans>
    </form-beans>
    <action-mappings>

        <action type="SuccessAction" path="/ShowPrimerIngreso.do">
            <forward name="success" path="/login/primerIngreso.jsp"/>
        </action>

        <action type="RegistrarConsumerAction" path="/RegistrarConsumer.do">
            <forward name="success" path="/web_portal/home/ShowLogin.do" redirect="true"/>
            <forward name="warning" path="/login/failures/failParamsLoginPrimerIngreso.jsp"/>
            <forward name="failure" path="/login/failures/failLoginPrimerIngreso.jsp"/>
        </action>

    </action-mappings>
</actions>