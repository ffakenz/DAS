<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- ******************************* -->
    <!--  CREATE PROCEDURES CHANGE-SETS  -->
    <!-- ******************************* -->
    <changeSet id="Create procedure get_new_id" author="DAS-Team" runAlways="true"
               runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM information_schema.routines
                WHERE ROUTINE_TYPE = 'FUNCTION'
                AND SPECIFIC_CATALOG = 'db_concesionarias'
                AND ROUTINE_NAME = 'get_new_id'
            </sqlCheck>
        </preConditions>
        <sqlFile
                path="/src/main/resources/liquibase/functions/get_new_id.sql"/>
    </changeSet>
</databaseChangeLog>